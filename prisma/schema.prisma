generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Athlete {
  id              Int               @id @default(autoincrement())
  espnId          Int?
  olympediaId     Int?
  firstName       String?
  lastName        String?
  nativeName      String?
  sport           String?
  description     String?
  popScore        Int?
  status          String?
  heritage        String[]
  Sport           Sport?            @relation(fields: [sport], references: [id])
  FavoriteMoments FavoriteMoments[]
}

model FavoriteMoments {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  userId      Int?
  athleteId   Int?
  description String?
  url         String?
  Athlete     Athlete? @relation(fields: [athleteId], references: [id])
  User        User?    @relation(fields: [userId], references: [id])
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  createdAt DateTime @default(now())
  content   String?
  published Boolean  @default(false)
  authorId  Int
  User      User     @relation(fields: [authorId], references: [id])
}

model Profile {
  id     Int     @id @default(autoincrement())
  bio    String?
  userId Int     @unique
  User   User    @relation(fields: [userId], references: [id])
}

model Sport {
  id      String    @id
  sport   String
  gender  String?
  olympic Boolean?
  Athlete Athlete[]
}

model User {
  id              Int               @id @default(autoincrement())
  name            String?
  email           String            @unique
  FavoriteMoments FavoriteMoments[]
  Post            Post[]
  Profile         Profile?
}
